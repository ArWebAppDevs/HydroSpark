@{
  ViewData["Title"] = "Profile Page";
  var successMessage = TempData["success"];
  var currentUser = TempData["currUser"];
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>HydroSpark - Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Keeping all previous styles */
  </style>
</head>

<body>
  @if (successMessage != null)
  {
    <script type="text/javascript">
      alert('@successMessage');
      window.location.reload();
    </script>
  }

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-overlay">
      <h1 class="hero-title">Powering Innovation with HydroSpark</h1>
      <p class="hero-subtitle">Explore top-notch mechanical and industrial solutions</p>
    </div>
  </section>

  <!-- Profile Section with Tabs -->
  <div class="container mt-5">
    <ul class="nav nav-tabs" id="profileTabs">
      <li class="nav-item">
        <a class="nav-link active" id="details-tab" data-bs-toggle="tab" href="#details">My Details</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="orders-tab" data-bs-toggle="tab" href="#orders">My Orders</a>
      </li>
    </ul>

    <div class="tab-content mt-3">
      <!-- User Details Tab -->
      <div class="tab-pane fade show active" id="details">
        <div class="card p-4">
          <h3>User Profile</h3>
          <p><strong>Email:</strong> currentUser.Email</p>
          <p style="color: grey;">If not registered <button onclick="window.location.href='/changePassword' style="
              font-size: 16px; padding: 5px 10px; border: none; background: none; color: blue; text-decoration:
              underline; cursor: pointer;">changepassword</button>
          </p>
        </div>
      </div>

      <!-- My Orders Tab -->
      <div class="tab-pane fade" id="orders">
        <div class="card p-4">
          <h3>My Orders</h3>
          @* @if (Model.Orders.Any())
          {
            <ul class="list-group">
              @foreach (var order in Model.Orders)
              {
                <li class="list-group-item">
                  <strong>Order #@order.OrderId</strong> - $@order.TotalPrice - <span
                    class="text-muted">@order.Status</span>
                </li>
              } *@
          </ul>
          }
          else
          {
          <p>No orders found.</p>
          }
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
