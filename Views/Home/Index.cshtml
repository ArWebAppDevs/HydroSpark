@model IEnumerable<HydroSpark.Models.Item>
@{
    ViewData["Title"] = "Home Page";
    var successMessage = TempData["success"];
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HydroSpark-Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Set a dark background color for the page */
        body {
            background-color: #f3e6e6;
            /* Dark grey for a professional look */
            margin: 0;
            padding: 0;
        }

        /* Hero Section with Your Image */
        .hero {
            position: relative;
            width: 100%;
            height: 100vh;
            background-image: url('https://img.freepik.com/free-photo/people-job-corona-virus-pandemic_342744-125.jpg?ga=GA1.1.261583280.1739093506&semt=ais_hybrid');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            /* Ensure the image covers the screen */
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .hero-overlay {
            background: rgba(0, 0, 0, 0.6);
            /* Dark overlay to improve text visibility */
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            text-align: center;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: bold;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
        }

        .hero-subtitle {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .hero .btn {
            font-size: 1.2rem;
            padding: 12px 30px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }

        .hero .btn:hover {
            background-color: #ff9200;
            transform: scale(1.05);
        }

        /* Card Container */
        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            /* Responsive Grid Layout */
            gap: 20px;
            padding: 20px;
        }

        /* Individual Card */
        .card {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            height: 250px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            font-size: 16px;
            color: #333;
        }

        .card h5 {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card p {
            font-size: 1rem;
            color: #666;
        }

        .card .btn {
            margin-top: 15px;
        }
    </style>
</head>

<body>
    @if (successMessage != null)
    {
        <script type="text/javascript">
            // Show alert with the success message
            alert('@successMessage');

            // After the alert is closed, reload the page to clear TempData
            window.location.reload();
        </script>
    }
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-overlay">
            <h1 class="hero-title">Powering Innovation with HydroSpark</h1>
            <p class="hero-subtitle">Explore top-notch mechanical and industrial solutions</p>
            <a href="#" class="btn btn-warning btn-lg">Shop Now</a>
        </div>
    </section>

    <!-- Dynamic Cards Container -->
    <section class="card-container">
        @foreach (var item in Model)
        {
            <div class="card">
                <h5>@item.Name</h5>
                <p>@item.Description</p>
                <p><strong>Price:</strong> $@item.Price</p>
                <button class="btn btn-warning">viewport Details</button>
            </div>
        }
    </section>

    <!-- Bootstrap JS -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let text = "Powering Innovation with HydroSpark"; // Your text
            let index = 0;
            let speed = 100; // Speed in milliseconds
            let heroTitle = document.querySelector(".hero-title");

            const typingSound = new Audio("https://www.soundjay.com/button/beep-07.wav"); // Typing sound

            function typeEffect() {
                if (index < text.length) {
                    heroTitle.innerHTML += text[index];
                    typingSound.play(); // Play the typing sound on each letter
                    index++;
                    setTimeout(typeEffect, speed);
                }
            }

            // Initial styling setup
            heroTitle.innerHTML = ""; // Clear text before animation
            heroTitle.style.opacity = 1; // Set text to visible
            typeEffect();
        });
    </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>