@{
  ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>HydroSpark - Admin signin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    /* Set a dark background color for the page */
    body {
      background-color: #f3e6e6;
      /* Dark grey for a professional look */
      margin: 0;
      padding: 0;
    }

    /* Hero Section with Your Image */
    .hero {
      position: relative;
      width: 100%;
      height: 100vh;
      background-image: url('https://img.freepik.com/free-photo/people-job-corona-virus-pandemic_342744-125.jpg?ga=GA1.1.261583280.1739093506&semt=ais_hybrid');
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      /* Ensure the image covers the screen */
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
    }

    .hero-overlay {
      background: rgba(0, 0, 0, 0.6);
      /* Dark overlay to improve text visibility */
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 20px;
      text-align: center;
    }

    .hero-title {
      font-size: 3rem;
      font-weight: bold;
      text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
    }

    .hero-subtitle {
      font-size: 1.5rem;
      margin-bottom: 20px;
    }

    .hero .btn {
      font-size: 1.2rem;
      padding: 12px 30px;
      font-weight: bold;
      transition: all 0.3s ease-in-out;
    }

    .hero .btn:hover {
      background-color: #ff9200;
      transform: scale(1.05);
    }

    /* Form Container Styling */
    .form-container {
      background-color: rgba(255, 255, 255, 0.8);
      /* Light background for the form */
      padding: 20px;
      /* Reduced padding */
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 400px;
      /* Slightly wider width */
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .form-container .form-group {
      width: 100%;
      margin-bottom: 15px;
    }

    .form-container .form-control {
      padding: 10px;
      font-size: 1rem;
      border-radius: 4px;
      border: 1px solid #ccc;
      margin-top: 5px;
    }

    .form-container .form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .form-container .btn {
      width: 100%;
      padding: 12px;
      font-weight: bold;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      transition: background-color 0.3s ease;
    }

    .form-container .btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>

<body>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-overlay">
      <div class="form-container">
        <form method="post" action="Signin">
          @if (TempData["msg"] != null)
          {
            <div class="alert alert-success">
              @TempData["msg"]
            </div>
          }
          <h4 class="text-center text-dark">Admin Sign In</h4>
          <div class="form-group">
            <label for="Email" class="text-dark">Email address</label>
            <input type="email" class="form-control" id="Email" name="Email" required />
          </div>
          <div class="form-group">
            <label for="Password" class="text-dark">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" required />
          </div>

          <button type="submit" class="btn btn-primary">SignIn</button>


        </form>
      </div>
    </div>
  </section>

  <!-- Bootstrap JS -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      let text = "Powering Innovation with HydroSpark"; // Your text
      let index = 0;
      let speed = 100; // Speed in milliseconds
      let heroTitle = document.querySelector(".hero-title");

      const typingSound = new Audio("https://www.soundjay.com/button/beep-07.wav"); // Typing sound

      function typeEffect() {
        if (index < text.length) {
          heroTitle.innerHTML += text[index];
          typingSound.play(); // Play the typing sound on each letter
          index++;
          setTimeout(typeEffect, speed);
        }
      }

      // Initial styling setup
      heroTitle.innerHTML = ""; // Clear text before animation
      heroTitle.style.opacity = 1; // Set text to visible
      typeEffect();
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
