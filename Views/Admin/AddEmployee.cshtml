@{
  ViewData["Title"] = "HydroSpark - Register";
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>HydroSpark - Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    /* Ensure full-page scrollability */
    body,
    html {
      margin: 0;
      padding: 0;
      height: 100%;
    }

    /* Hero Section with Full Page Height */
    .hero {
      position: relative;
      width: 100%;
      min-height: 100vh;
      /* Ensures it takes full viewport height */
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      background-image: url('https://img.freepik.com/free-photo/people-job-corona-virus-pandemic_342744-125.jpg?ga=GA1.1.261583280.1739093506&semt=ais_hybrid');
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      color: white;
    }

    .hero-overlay {
      background: rgba(0, 0, 0, 0.6);
      width: 100%;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-end;
      padding-bottom: 50px;
      text-align: center;
    }

    /* Form Container Styling */
    .form-container {
      background-color: rgba(255, 255, 255, 0.9);
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 500px;
    }

    .form-container .form-group {
      width: 100%;
      margin-bottom: 15px;
    }

    .form-container .form-control {
      padding: 10px;
      font-size: 1rem;
      border-radius: 4px;
      border: 1px solid #ccc;
      margin-top: 5px;
    }

    .form-container .form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    /* Simple Checkbox Styling */
    .form-check {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
    }

    .form-check-input {
      width: 18px;
      height: 18px;
      accent-color: #007bff;
      margin-right: 8px;
    }

    .form-check-label {
      font-size: 1rem;
      font-weight: normal;
      color: #333;
    }

    .form-container .btn {
      width: 100%;
      padding: 12px;
      font-weight: bold;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      transition: background-color 0.3s ease;
    }

    .form-container .btn:hover {
      background-color: #0056b3;
    }

    /* Footer Sticks to Bottom */
    .footer {
      background-color: #333;
      color: white;
      text-align: center;
      padding: 15px 0;
      width: 100%;
      position: absolute;
      bottom: 0;
    }
  </style>
</head>

<body>

  <!-- Hero Section (Extends to Footer) -->
  <section class="hero">
    <div class="hero-overlay">
      <div class="form-container">
        <form method="post" action="/admin/addEmployee">
          @if (TempData["msg"] != null)
          {
            <div class="alert alert-success">
              @TempData["msg"]
            </div>
          }
          <h4 class="text-center text-dark">Sign Up</h4>
          <div class="form-group">
            <label for="FirstName" class="text-dark">First Name</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" required />
          </div>
          <div class="form-group">
            <label for="LastName" class="text-dark">Last Name</label>
            <input type="text" class="form-control" id="LastName" name="LastName" required />
          </div>
          <div class="form-group">
            <label for="Email" class="text-dark">Email address</label>
            <input type="email" class="form-control" id="Email" name="Email" required />
          </div>
          @* <div class="form-group">
            <label for="Password" class="text-dark">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" required />
          </div> *@
          <div class="form-group">
            <label for="Mobile" class="text-dark">Mobile Number</label>
            <input type="number" class="form-control" id="Mobile" name="Mobile" required />
          </div>

          <!-- Role Selection with Checkboxes -->
          <div class="form-group">
            <label class="text-dark">Select Roles</label><br>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="roleAdmin" name="Roles" value="Admin">
              <label class="form-check-label" for="roleAdmin">Admin</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="roleOwner" name="Roles" value="Owner">
              <label class="form-check-label" for="roleOwner">Owner</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="roleEmployee" name="Roles" value="Employee">
              <label class="form-check-label" for="roleEmployee">Employee</label>
            </div>
          </div>

          <button type="submit" class="btn btn-primary">Add Employee</button>
        </form>
      </div>
    </div>
  </section>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
