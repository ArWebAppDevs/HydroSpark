﻿@{

    var employee = TempData["employee"];
    var user = TempData["user"];
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HydroSpark</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/wwwroot/css/layout.css"> <!-- External CSS -->
    <style>
        /* Ensure the body takes up the full height of the viewport */
        html,
        body {
            height: 100%;
            margin: 0;
        }

        /* Main content and footer need to take full height */
        .content-wrapper {
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }

        /* Flex the main content to take up remaining space */
        main {
            flex: 1;
        }

        /* Footer styling */
        footer {
            background-color: #222;
            color: white;
            text-align: center;
            padding: 20px;
            margin-top: auto;
            /* Ensures it stays at the bottom */
        }

        footer a {
            color: #ff9200;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <!-- Wrapper to make sure content takes full height -->
    <div class="content-wrapper">

        <!-- Navbar -->
        <header class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-warning" href="#">HydroSpark</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item"><a class="nav-link active" href="#">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Shop</a></li>
                    </ul>

                    <form class="d-flex me-3">
                        <input class="form-control form-control-dark search-input" type="search" placeholder="Search..."
                            aria-label="Search">
                        <button class="btn btn-outline-warning ms-2" type="submit">🔍</button>
                    </form>

                    <div>
                        <button class="btn btn-outline-light me-2">🛒 Cart</button>
                        @* <button class="btn btn-warning">Login</button> *@

                        <button class="btn btn-warning" onclick="window.location.href='/Signin'">Login</button>
                        

                            <button class="btn btn-warning" onclick="window.location.href='/admin'">Admin</button>

                        

                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content Without Container -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer>
            <p>&copy; 2025 HydroSpark | <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a></p>
        </footer>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>